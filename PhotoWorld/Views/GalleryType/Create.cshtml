@model JoeFurnitureStore.DBContext.GalleryType

@{
    ViewBag.Title = "Create";
}
<div class="well well-sm"><h2>Create New Gallery Type</h2></div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-group">
            @Html.ValidationSummary(true)

            <div class="form-group row">
                @Html.LabelFor(model => model.GalleryTypeName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.GalleryTypeName, new { placeholder = "Enter " + @Html.DisplayNameFor(model => model.GalleryTypeName), @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GalleryTypeName)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a href="Index" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
